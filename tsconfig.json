{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "react"],
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
